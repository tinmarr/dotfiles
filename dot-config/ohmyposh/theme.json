{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "<blue>{{ .Segments.Path.Path }}</> ❯ ",
    "foreground": "green"
  },
  "blocks": [
    {
      "type": "rprompt",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{ if .SSHSession }}{{ .UserName }}@{{ .HostName }}{{ end }} ",
          "foreground": "green",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "display_mode": "files"
          },
          "template": "\ue235 {{.Venv}} {{ .Full }} ",
          "foreground": "cyan",
          "type": "python",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": false,
            "cache_duration": "none",
            "style": "austin",
            "threshold": 500
          },
          "template": "\udb82\udd54 {{ .FormattedMs }} ",
          "foreground": "lightMagenta",
          "type": "executiontime",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{.Icon}} ",
          "type": "os",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "style": "powerlevel"
          },
          "template": "{{ if not .Writable }}\uf023 {{else}}{{ if matchP \"^~$\" .Path}}\uf015 {{else}}\uf07c {{end}}{{end}}{{ .Path }} ",
          "foreground": "blue",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "branch_icon": "\uf126 ",
            "cache_duration": "none",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf0c7 {{ .StashCount }}{{ end }}",
          "foreground": "green",
          "type": "git",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "❯ ",
          "foreground": "red",
          "type": "text",
          "style": "plain",
          "foreground_templates": ["{{ if eq .Code 0 }}green{{ end }}"]
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
